{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "scripts", "test"],
  "typeRoots": [
    "node_modules/@types"
  ]
}
